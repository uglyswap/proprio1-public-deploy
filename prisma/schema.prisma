// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION & USERS
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  isSuperAdmin  Boolean   @default(false) // Flag pour super admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts           Account[]
  sessions           Session[]
  organizationUsers  OrganizationUser[]
  searches           Search[]
  auditLogs          AuditLog[]

  @@index([email])
  @@index([isSuperAdmin])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// ORGANIZATIONS & MULTI-TENANT
// ============================================

enum UserRole {
  SUPER_ADMIN  // Vous, l'opérateur du SaaS
  OWNER        // Propriétaire d'organisation
  ADMIN        // Admin d'organisation
  MEMBER       // Membre simple
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Subscription
  plan             SubscriptionPlan @default(FREE)
  stripeCustomerId String?          @unique

  // Credits system
  creditBalance        Int      @default(0)
  creditsResetAt       DateTime? // Date du dernier reset mensuel
  monthlyCredits       Int      @default(0) // Crédits alloués par mois

  // Features
  isActive             Boolean  @default(true)
  canUseEnrichment     Boolean  @default(false)

  // Relations
  users            OrganizationUser[]
  searches         Search[]
  creditTransactions CreditTransaction[]
  enrichmentLogs   EnrichmentLog[]
  subscriptions    Subscription[]

  @@index([slug])
  @@index([stripeCustomerId])
  @@index([plan])
}

model OrganizationUser {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  role           UserRole     @default(MEMBER)
  createdAt      DateTime     @default(now())

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([userId])
  @@index([organizationId])
}

// ============================================
// SUBSCRIPTION & BILLING
// ============================================

enum SubscriptionPlan {
  FREE
  BASIC
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  INCOMPLETE
  INCOMPLETE_EXPIRED
  PAST_DUE
  TRIALING
  UNPAID
}

model Subscription {
  id                   String             @id @default(cuid())
  organizationId       String

  stripeSubscriptionId String             @unique
  stripePriceId        String
  stripeCurrentPeriodEnd DateTime?

  plan                 SubscriptionPlan
  status               SubscriptionStatus

  cancelAtPeriodEnd    Boolean            @default(false)
  canceledAt           DateTime?

  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  organization         Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([stripeSubscriptionId])
}

// ============================================
// CREDITS SYSTEM
// ============================================

enum TransactionType {
  PURCHASE           // Achat de crédits
  SUBSCRIPTION       // Crédits inclus dans abonnement
  SEARCH_COST        // Consommation pour recherche
  ENRICHMENT_COST    // Consommation pour enrichissement
  REFUND             // Remboursement
  ADJUSTMENT         // Ajustement manuel
}

model CreditTransaction {
  id             String          @id @default(cuid())
  organizationId String
  amount         Int             // Positif = ajout, négatif = débit
  type           TransactionType
  description    String?

  searchId       String?
  enrichmentId   String?

  createdAt      DateTime        @default(now())

  organization   Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  search         Search?         @relation(fields: [searchId], references: [id])

  @@index([organizationId])
  @@index([searchId])
  @@index([createdAt])
}

// ============================================
// SEARCH & PROPERTIES
// ============================================

enum SearchType {
  BY_ADDRESS     // Recherche par adresse
  BY_OWNER       // Recherche par propriétaire
  BY_ZONE        // Recherche par zone géographique
}

enum SearchStatus {
  ESTIMATED      // Estimation faite, en attente de validation
  VALIDATED      // Validée, en cours d'exécution
  COMPLETED      // Terminée, résultats disponibles
  ENRICHING      // En cours d'enrichissement
  ENRICHED       // Enrichie
  FAILED         // Échec
}

model Search {
  id              String       @id @default(cuid())
  organizationId  String
  userId          String

  type            SearchType
  status          SearchStatus @default(ESTIMATED)

  // Critères de recherche
  criteria        Json         // Stockage flexible des critères

  // Estimation
  estimatedRows   Int?
  estimatedCost   Int?         // En crédits

  // Résultats
  actualRows      Int?
  actualCost      Int?

  // Enrichissement
  enrichRequested Boolean      @default(false)
  enrichedAt      DateTime?

  // Métadonnées
  createdAt       DateTime     @default(now())
  validatedAt     DateTime?
  completedAt     DateTime?

  // Relations
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user            User         @relation(fields: [userId], references: [id])
  properties      Property[]
  transactions    CreditTransaction[]

  @@index([organizationId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Property {
  id              String    @id @default(cuid())
  searchId        String

  // Données brutes (de votre base PostgreSQL existante)
  adresse         String
  codePostal      String?
  ville           String?
  codeCommune     String?
  departement     String?

  // Propriétaire (personne morale)
  proprietaire    String    // Nom du propriétaire initial
  siren           String?
  companyName     String?   // Nom de la société (SIRENE)

  // Dirigeant (croisé avec SIRENE)
  dirigeantNom    String?
  dirigeantPrenom String?
  dirigeantQualite String?  // "Président", "Gérant", etc.

  // Siège social (SIRENE)
  siegeAdresse    String?
  siegeCodePostal String?
  siegeVille      String?

  typeLocal       String?
  surface         Decimal?  @db.Decimal(10, 2)

  // Coordonnées géographiques
  latitude        Decimal?  @db.Decimal(10, 8)
  longitude       Decimal?  @db.Decimal(11, 8)

  // Parcelle cadastre
  section         String?
  numeroParcelle  String?

  // Enrichissement contact (optionnel, payant)
  email           String?
  emailVerified   Boolean   @default(false)
  phone           String?
  mobilePhone     String?
  linkedin        String?
  jobTitle        String?
  enrichedAt      DateTime?
  enrichmentConfidence Int?

  // Métadonnées
  createdAt       DateTime  @default(now())

  // Relations
  search          Search    @relation(fields: [searchId], references: [id], onDelete: Cascade)

  @@index([searchId])
  @@index([siren])
  @@index([codePostal])
  @@index([codeCommune])
}

// ============================================
// ENRICHMENT LOGS
// ============================================

model EnrichmentLog {
  id             String       @id @default(cuid())
  searchId       String
  organizationId String

  provider       String       // "dropcontact"
  successCount   Int          @default(0)
  failureCount   Int          @default(0)
  cost           Decimal      @db.Decimal(10, 4)

  completedAt    DateTime     @default(now())

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([searchId])
}

// ============================================
// SYSTEM CONFIGURATION (Super Admin)
// ============================================

enum ConfigCategory {
  STRIPE
  API
  DATABASE
  FEATURE
  BILLING
}

model SystemConfig {
  id          String         @id @default(cuid())
  category    ConfigCategory
  key         String         @unique
  value       String?        @db.Text // Encrypted pour les secrets
  isEncrypted Boolean        @default(false)
  description String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([category])
  @@index([key])
}

// ============================================
// PLAN CONFIGURATION (Dynamic Plans)
// ============================================

model PlanConfig {
  id                String           @id @default(cuid())
  plan              SubscriptionPlan @unique
  name              String           // "Basic", "Pro", etc.
  displayName       String           // Nom affiché au client
  description       String?          @db.Text

  // Pricing
  monthlyPrice      Decimal          @db.Decimal(10, 2)
  yearlyPrice       Decimal?         @db.Decimal(10, 2)

  // Credits
  monthlyCredits    Int              // Crédits alloués par mois
  creditsPerResult  Int              @default(10) // Crédits par ligne de résultat

  // Features
  canUseEnrichment  Boolean          @default(false)
  canUseAPI         Boolean          @default(false)
  maxTeamMembers    Int              @default(1)
  maxSearchesPerDay Int?

  // Stripe
  stripePriceIdMonthly String?
  stripePriceIdYearly  String?

  // Visibility
  isActive          Boolean          @default(true)
  isVisible         Boolean          @default(true)
  sortOrder         Int              @default(0)

  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  @@index([plan])
  @@index([isActive])
  @@index([sortOrder])
}

// ============================================
// DATA SOURCES (Multiple PostgreSQL DBs)
// ============================================

enum DataSourceType {
  POSTGRESQL
  MYSQL
  API
}

enum DataSourceStatus {
  ACTIVE
  INACTIVE
  TESTING
  ERROR
}

model DataSource {
  id              String           @id @default(cuid())
  name            String           // "Base Propriétaires", "SIRENE"
  description     String?          @db.Text
  type            DataSourceType
  status          DataSourceStatus @default(INACTIVE)

  // Connection (encrypted)
  host            String?
  port            Int?
  database        String?
  username        String?
  password        String?          @db.Text // Encrypted
  schema          String?          @default("public")
  tableName       String?          // Nom de la table principale

  // API (si type = API)
  apiUrl          String?
  apiKey          String?          @db.Text // Encrypted

  // Metadata
  lastTestedAt    DateTime?
  lastTestStatus  String?          // "success", "error"
  lastTestError   String?          @db.Text

  recordCount     Int?             // Nombre d'enregistrements (cache)
  lastSyncedAt    DateTime?

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  mappings        DataSourceMapping[]

  @@index([type])
  @@index([status])
  @@index([name])
}

model DataSourceMapping {
  id             String     @id @default(cuid())
  dataSourceId   String

  // Mapping de colonnes
  sourceColumn   String     // Nom de la colonne dans la source
  targetField    String     // Champ cible dans notre système
  dataType       String?    // "string", "number", "date", "geo"

  // Transformation
  transformer    String?    @db.Text // Code JS pour transformer la valeur

  // Options
  isRequired     Boolean    @default(false)
  isPrimaryKey   Boolean    @default(false)
  isIndexed      Boolean    @default(false)

  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  dataSource     DataSource @relation(fields: [dataSourceId], references: [id], onDelete: Cascade)

  @@unique([dataSourceId, sourceColumn])
  @@index([dataSourceId])
  @@index([targetField])
}

// ============================================
// AUDIT LOG (Traçabilité complète)
// ============================================

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  SEARCH
  EXPORT
  CONFIG_CHANGE
  CREDIT_CHANGE
  SUBSCRIPTION_CHANGE
  IMPERSONATE
  API_CALL
}

model AuditLog {
  id             String      @id @default(cuid())
  userId         String?
  organizationId String?

  action         AuditAction
  entity         String?     // "Organization", "User", "Search", etc.
  entityId       String?

  // Détails
  description    String?     @db.Text
  metadata       Json?       // Données additionnelles

  // Context
  ipAddress      String?
  userAgent      String?     @db.Text

  createdAt      DateTime    @default(now())

  user           User?       @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([organizationId])
  @@index([action])
  @@index([entity])
  @@index([createdAt])
}

// ============================================
// ANALYTICS & METRICS (Pour Super Admin)
// ============================================

model DailyMetrics {
  id                  String   @id @default(cuid())
  date                DateTime @unique @db.Date

  // Revenue
  mrr                 Decimal  @default(0) @db.Decimal(10, 2) // Monthly Recurring Revenue
  newMrr              Decimal  @default(0) @db.Decimal(10, 2)
  churnedMrr          Decimal  @default(0) @db.Decimal(10, 2)

  // Customers
  totalCustomers      Int      @default(0)
  newCustomers        Int      @default(0)
  churnedCustomers    Int      @default(0)
  activeCustomers     Int      @default(0)

  // Usage
  totalSearches       Int      @default(0)
  totalResults        Int      @default(0)
  creditsConsumed     Int      @default(0)
  creditsAllocated    Int      @default(0)

  // Costs
  apiCosts            Decimal  @default(0) @db.Decimal(10, 4)
  enrichmentCosts     Decimal  @default(0) @db.Decimal(10, 4)

  // Performance
  avgResponseTime     Int?     // En ms
  errorRate           Decimal? @db.Decimal(5, 2)

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([date])
}

// ============================================
// FEATURE FLAGS
// ============================================

model FeatureFlag {
  id              String   @id @default(cuid())
  name            String   @unique
  description     String?  @db.Text
  isEnabled       Boolean  @default(false)

  // Rollout
  rolloutPercent  Int      @default(100) // 0-100
  allowedPlans    String[] // ["PRO", "ENTERPRISE"]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([name])
  @@index([isEnabled])
}
