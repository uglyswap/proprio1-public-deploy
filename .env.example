# Database
DATABASE_URL="postgresql://user:password@localhost:5432/proprio_finder?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Stripe Price IDs - Client Side (utilisés dans pricing page)
NEXT_PUBLIC_STRIPE_BASIC_PRICE_ID="price_basic_monthly"
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID="price_pro_monthly"
NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID="price_enterprise_monthly"

# Stripe Price IDs - Server Side (utilisés dans webhooks pour getPlanFromPriceId)
STRIPE_BASIC_PRICE_ID="price_basic_monthly"
STRIPE_PRO_PRICE_ID="price_pro_monthly"
STRIPE_ENTERPRISE_PRICE_ID="price_enterprise_monthly"

# Dropcontact API
DROPCONTACT_API_KEY="your_dropcontact_api_key"

# Redis (for BullMQ job queue)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="ProprioFinder"

# Encryption (for sensitive data in SystemConfig)
ENCRYPTION_SECRET="your-encryption-secret-generate-with-openssl-rand-base64-32"

# CRON Secret (for scheduled tasks)
CRON_SECRET="your-cron-secret-generate-with-openssl-rand-base64-32"
