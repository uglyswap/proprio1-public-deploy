# ================================
# PRODUCTION ENVIRONMENT VARIABLES
# ================================

# Database (PostgreSQL)
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://proprio_user:your_secure_database_password_here@postgres:5432/proprio_finder?schema=public

# Redis
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# NextAuth
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs - Client Side
NEXT_PUBLIC_STRIPE_BASIC_PRICE_ID=price_basic_monthly
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=price_pro_monthly
NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# Stripe Price IDs - Server Side
STRIPE_BASIC_PRICE_ID=price_basic_monthly
STRIPE_PRO_PRICE_ID=price_pro_monthly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# Dropcontact API
DROPCONTACT_API_KEY=your_dropcontact_api_key

# App
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=ProprioFinder

# Security
ENCRYPTION_SECRET=generate_with_openssl_rand_base64_32
CRON_SECRET=generate_with_openssl_rand_base64_32

# Logging
LOG_LEVEL=info
